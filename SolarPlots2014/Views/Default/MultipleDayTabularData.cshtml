@{
    ViewBag.Title = "MultipleDayTabularData";
}
@model  List<SolarPlots.Classes.DatePlotData>

<table class="tableTabularData" cellpadding="0" cellspacing="0">
    <tr>
        <td>Date</td>
        <td>Sunrise Time</td>
        <td>Sunrise Azimuth<br />(Degrees)</td>
        <td>Sunset Time</td>
        <td>Sunset Azimuth<br />(Degrees)</td>
        <td>Solar Noon Time</td>
        <td>Solar Noon Altitude<br />(Degrees)</td>
        <td>Daylight Hours</td>
        <td>Day information</td>


    </tr>

    @foreach (SolarPlots.Classes.DatePlotData item in Model)
    {
        <tr>
            <td>
                @item.Date.ToString("MMM d, yyyy")
            </td>
            <td>@item.Sunrise.ToShortTimeString()</td>
            <td>@item.SunriseAzimuth</td>
            <td>@item.Sunset.ToShortTimeString()</td>
            <td>@item.SunsetAzimuth</td>
            <td>@item.SolarNoon.ToShortTimeString()</td>
            <td>@item.SolarNoonAltitude</td>
            <td>@item.DaylightHours</td>
            <td>@item.DateInformation</td>
        </tr>

    }

</table>